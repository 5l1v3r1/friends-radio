$size = 240px
$border = 2px

.card
  height $size
  width calc(100% - 100px)
  background #fff
  margin 20px auto
  border solid $border rgba(0, 0, 0, .05)
  position relative

  img
    height .84 * $size
    margin .08 * $size
  .content
    position absolute
    top .1 * $size
    height 'calc(100% - %s)' % (.2 * $size)
    width 'calc(100% - %s)' % (.1 * $size + $size)
    left $size
    text-align center
  .infos
    width 100%
    position absolute
    padding 20px
    bottom 0
  h1
    margin-top 20px
  .boxCount
    text-align center
    width 33%
    display inline-block
    .count
      font-weight bold
