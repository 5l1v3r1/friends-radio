$size = 100px
$border = 2px
$thumbSize = $size - $border * 2

body
  background #fafafa

.card
  height $size
  width calc(100% - 100px)
  background #fff
  margin 20px 50px
  border solid $border rgba(0, 0, 0, .05)
  .thumbnail
    width $thumbSize
    height $thumbSize
    display inline-block
    .playButton
      position relative
      top 50%
      left 50%
      transform translate(-50%, -50%)
      width 60%
      height 60%
      &:hover
        cursor pointer
  .content
    display inline-block
    vertical-align top
    margin 10px 20px
    width "calc(100% - %s - 40px)" % $size
